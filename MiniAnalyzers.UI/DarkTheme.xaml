<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<!-- Dark palette -->
	<SolidColorBrush x:Key="Brush.Background" Color="#1E1E1E"/>
	<SolidColorBrush x:Key="Brush.Panel"      Color="#252526"/>
	<SolidColorBrush x:Key="Brush.Border"     Color="#3C3C3C"/>
	<SolidColorBrush x:Key="Brush.Foreground" Color="#F3F3F3"/>
	<SolidColorBrush x:Key="Brush.RowHover"   Color="#2F2F2F"/>

	<!-- Accent for primary action -->
	<SolidColorBrush x:Key="Brush.Primary"         Color="#569CD6"/>
	<SolidColorBrush x:Key="Brush.Primary.Lighter" Color="#6FB3E3"/>
	<SolidColorBrush x:Key="Brush.Primary.Darker"  Color="#3B82B5"/>

	<!-- Buttons -->
	<Style x:Key="ToolbarButton" TargetType="Button">
		<Setter Property="Foreground" Value="{StaticResource Brush.Foreground}"/>
		<Setter Property="Background" Value="{StaticResource Brush.Panel}"/>
		<Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="Padding" Value="12,6"/>
		<Setter Property="Margin" Value="0,0,8,8"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Background" Value="#2F2F2F"/>
			</Trigger>
			<Trigger Property="IsPressed" Value="True">
				<Setter Property="Background" Value="#3A3A3A"/>
			</Trigger>
			<Trigger Property="IsEnabled" Value="False">
				<Setter Property="Opacity" Value="0.6"/>
			</Trigger>
		</Style.Triggers>
	</Style>

	<Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ToolbarButton}">
		<Setter Property="Background" Value="{StaticResource Brush.Primary}"/>
		<Setter Property="BorderBrush" Value="{StaticResource Brush.Primary.Darker}"/>
		<Setter Property="Foreground" Value="White"/>
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Background" Value="{StaticResource Brush.Primary.Lighter}"/>
			</Trigger>
			<Trigger Property="IsPressed" Value="True">
				<Setter Property="Background" Value="{StaticResource Brush.Primary.Darker}"/>
			</Trigger>
		</Style.Triggers>
	</Style>

	<!-- DataGrid dark polish -->
	<Style TargetType="{x:Type DataGrid}">
		<Setter Property="Background" Value="{StaticResource Brush.Panel}"/>
		<Setter Property="RowBackground" Value="{StaticResource Brush.Panel}"/>
		<Setter Property="AlternatingRowBackground" Value="#2A2A2A"/>
		<Setter Property="Foreground" Value="{StaticResource Brush.Foreground}"/>
		<Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
		<Setter Property="GridLinesVisibility" Value="None"/>
		<Setter Property="HeadersVisibility" Value="Column"/>
	</Style>

	<Style x:Key="CodeMonoText" TargetType="TextBox">
		<Setter Property="FontFamily" Value="Cascadia Code, Consolas"/>
		<Setter Property="FontSize" Value="13"/>
		<Setter Property="Foreground" Value="#DCDCDC"/>
		<!-- soft white -->
		<Setter Property="Background" Value="#1B1B1B"/>
		<!-- dark panel -->
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="IsReadOnly" Value="True"/>
		<Setter Property="TextWrapping" Value="NoWrap"/>
		<Setter Property="AcceptsReturn" Value="True"/>
		<Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
		<Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
	</Style>

	<Style TargetType="TextBox">
		<Setter Property="Background" Value="{StaticResource Brush.Panel}"/>
		<Setter Property="Foreground" Value="{StaticResource Brush.Foreground}"/>
		<Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="Padding" Value="6,4"/>
		<Setter Property="CaretBrush" Value="{StaticResource Brush.Foreground}"/>
	</Style>
	
	<Style TargetType="GroupBox">
		<Setter Property="Foreground" Value="{StaticResource Brush.Foreground}"/>
		<Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
		<Setter Property="Margin" Value="0,0,0,8"/>
		
	</Style>

	<Style TargetType="{x:Type DataGridColumnHeader}">
		<!-- makes the top header row dark -->
		<Setter Property="Background" Value="#2B2B2B"/>
		<Setter Property="Foreground" Value="{StaticResource Brush.Foreground}"/>
		<Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
		<Setter Property="BorderThickness" Value="0,0,0,1"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="Padding" Value="8,6"/>
		<Setter Property="HorizontalContentAlignment" Value="Left"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Background" Value="#333333"/>
			</Trigger>
		</Style.Triggers>
	</Style>

	<Style TargetType="{x:Type DataGridRow}">
		<Setter Property="Margin" Value="0,1,0,1"/>
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Background" Value="{StaticResource Brush.RowHover}"/>
			</Trigger>
			<Trigger Property="IsSelected" Value="True">
				<Setter Property="Background" Value="#345E8C"/>
				<Setter Property="Foreground" Value="White"/>
			</Trigger>
		</Style.Triggers>
	</Style>

	<Style TargetType="{x:Type GridViewColumnHeader}">
		<Setter Property="Background" Value="#2B2B2B"/>
		<Setter Property="Foreground" Value="{StaticResource Brush.Foreground}"/>
		<Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="Padding" Value="8,4"/>
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Background" Value="#333333"/>
			</Trigger>
		</Style.Triggers>
	</Style>

	<Style TargetType="ListViewItem">
		<!-- default row look -->
		<Setter Property="Background" Value="{StaticResource Brush.Panel}"/>
		<Setter Property="Foreground" Value="{StaticResource Brush.Foreground}"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Margin" Value="0,1,0,1"/>
		<Setter Property="Padding" Value="4,2"/>

		<Style.Triggers>
			<!-- hover -->
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Background" Value="{StaticResource Brush.RowHover}"/>
			</Trigger>
			<!-- selected -->
			<Trigger Property="IsSelected" Value="True">
				<Setter Property="Background" Value="#2F3A4D"/>
				<!-- slightly darker than panel -->
				<Setter Property="Foreground" Value="White"/>
			</Trigger>
			
		</Style.Triggers>
	</Style>

</ResourceDictionary>